<Window
    x:Class="Calculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="350"
    Height="525"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            x:Name="resultLabel"
            Grid.ColumnSpan="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="0"
            FontSize="60" />
        <Button
            x:Name="AC"
            Grid.Row="1"
            Margin="5"
            Content="AC" />
        <Button
            x:Name="negative"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Content="+/1" />
        <Button
            x:Name="percentage"
            Grid.Row="1"
            Grid.Column="2"
            Margin="5"
            Content="%" />
        <Button
            x:Name="divide"
            Grid.Row="1"
            Grid.Column="3"
            Margin="5"
            Content="/" />
        <Button
            x:Name="seven"
            Grid.Row="2"
            Margin="5"
            Content="7" />
        <Button
            x:Name="eight"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            Content="8" />
        <Button
            x:Name="nine"
            Grid.Row="2"
            Grid.Column="2"
            Margin="5"
            Content="9" />
        <Button
            x:Name="multiply"
            Grid.Row="2"
            Grid.Column="3"
            Margin="5"
            Content="*" />
        <Button
            x:Name="four"
            Grid.Row="3"
            Margin="5"
            Content="4" />
        <Button
            x:Name="five"
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            Content="5" />
        <Button
            x:Name="six"
            Grid.Row="3"
            Grid.Column="2"
            Margin="5"
            Content="6" />
        <Button
            x:Name="minus"
            Grid.Row="3"
            Grid.Column="3"
            Margin="5"
            Content="-" />
        <Button
            x:Name="one"
            Grid.Row="4"
            Margin="5"
            Content="1" />
        <Button
            x:Name="two"
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            Content="2" />
        <Button
            x:Name="three"
            Grid.Row="4"
            Grid.Column="2"
            Margin="5"
            Content="3" />
        <Button
            x:Name="plus"
            Grid.Row="4"
            Grid.Column="3"
            Margin="5"
            Content="+" />
        <Button
            x:Name="zero"
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="5"
            Content="0" />
        <Button
            x:Name="dot"
            Grid.Row="5"
            Grid.Column="2"
            Margin="5"
            Content="." />
        <Button
            x:Name="equal"
            Grid.Row="5"
            Grid.Column="3"
            Margin="5"
            Content="=" />
    </Grid>
</Window>

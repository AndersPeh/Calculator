<Window
  x:Class="Calculator.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Calculator"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="MainWindow"
  Width="350"
  Height="525"
  mc:Ignorable="d"
>
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="2*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Label
      x:Name="resultLabel"
      Grid.ColumnSpan="4"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      Content="0"
    />
    <Button
      x:Name="ACButton"
      Grid.Row="1"
      Content="AC"
      Style="{StaticResource additionalButtonsStyle}"
    />
    <Button
      x:Name="negativeButton"
      Grid.Row="1"
      Grid.Column="1"
      Content="+/-"
      Style="{StaticResource additionalButtonsStyle}"
    />
    <Button
      x:Name="percentageButton"
      Grid.Row="1"
      Grid.Column="2"
      Content="%"
      Style="{StaticResource additionalButtonsStyle}"
    />
    <Button
      x:Name="divideButton"
      Grid.Row="1"
      Grid.Column="3"
      Click="OperationButton_Click"
      Content="/"
      Style="{StaticResource operatorButtonsStyle}"
    />
    <Button
      x:Name="sevenButton"
      Grid.Row="2"
      Click="NumberButton_Click"
      Content="7"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="eightButton"
      Grid.Row="2"
      Grid.Column="1"
      Click="NumberButton_Click"
      Content="8"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="nineButton"
      Grid.Row="2"
      Grid.Column="2"
      Click="NumberButton_Click"
      Content="9"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="multiplyButton"
      Grid.Row="2"
      Grid.Column="3"
      Click="OperationButton_Click"
      Content="*"
      Style="{StaticResource operatorButtonsStyle}"
    />
    <Button
      x:Name="fourButton"
      Grid.Row="3"
      Click="NumberButton_Click"
      Content="4"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="fiveButton"
      Grid.Row="3"
      Grid.Column="1"
      Click="NumberButton_Click"
      Content="5"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="sixButton"
      Grid.Row="3"
      Grid.Column="2"
      Click="NumberButton_Click"
      Content="6"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="minusButton"
      Grid.Row="3"
      Grid.Column="3"
      Click="OperationButton_Click"
      Content="-"
      Style="{StaticResource operatorButtonsStyle}"
    />
    <Button
      x:Name="oneButton"
      Grid.Row="4"
      Click="NumberButton_Click"
      Content="1"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="twoButton"
      Grid.Row="4"
      Grid.Column="1"
      Click="NumberButton_Click"
      Content="2"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="threeButton"
      Grid.Row="4"
      Grid.Column="2"
      Click="NumberButton_Click"
      Content="3"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="plusButton"
      Grid.Row="4"
      Grid.Column="3"
      Click="OperationButton_Click"
      Content="+"
      Style="{StaticResource operatorButtonsStyle}"
    />
    <Button
      x:Name="zeroButton"
      Grid.Row="5"
      Grid.ColumnSpan="2"
      Click="NumberButton_Click"
      Content="0"
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="dotButton"
      Grid.Row="5"
      Grid.Column="2"
      Content="."
      Style="{StaticResource numberButtonsStyle}"
    />
    <Button
      x:Name="equalButton"
      Grid.Row="5"
      Grid.Column="3"
      Content="="
      Style="{StaticResource operatorButtonsStyle}"
    />
  </Grid>
</Window>

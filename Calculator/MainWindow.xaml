<Window
  x:Class="Calculator.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Calculator"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="MainWindow"
  Width="350"
  Height="525"
  mc:Ignorable="d"
>
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="2*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Label
      x:Name="resultLabel"
      Grid.ColumnSpan="4"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      Content="0"
      FontSize="60"
    />
    <Button x:Name="ACButton" Grid.Row="1" Margin="5" Content="AC" />
    <Button x:Name="negativeButton" Grid.Row="1" Grid.Column="1" Margin="5" Content="+/-" />
    <Button x:Name="percentageButton" Grid.Row="1" Grid.Column="2" Margin="5" Content="%" />
    <Button
      x:Name="divideButton"
      Grid.Row="1"
      Grid.Column="3"
      Margin="5"
      Background="Orange"
      Click="OperationButton_Click"
      Content="/"
      Foreground="White"
    />
    <Button
      x:Name="sevenButton"
      Grid.Row="2"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="7"
      Foreground="White"
    />
    <Button
      x:Name="eightButton"
      Grid.Row="2"
      Grid.Column="1"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="8"
      Foreground="White"
    />
    <Button
      x:Name="nineButton"
      Grid.Row="2"
      Grid.Column="2"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="9"
      Foreground="White"
    />
    <Button
      x:Name="multiplyButton"
      Grid.Row="2"
      Grid.Column="3"
      Margin="5"
      Background="Orange"
      Click="OperationButton_Click"
      Content="*"
      Foreground="White"
    />
    <Button
      x:Name="fourButton"
      Grid.Row="3"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="4"
      Foreground="White"
    />
    <Button
      x:Name="fiveButton"
      Grid.Row="3"
      Grid.Column="1"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="5"
      Foreground="White"
    />
    <Button
      x:Name="sixButton"
      Grid.Row="3"
      Grid.Column="2"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="6"
      Foreground="White"
    />
    <Button
      x:Name="minusButton"
      Grid.Row="3"
      Grid.Column="3"
      Margin="5"
      Background="Orange"
      Click="OperationButton_Click"
      Content="-"
      Foreground="White"
    />
    <Button
      x:Name="oneButton"
      Grid.Row="4"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="1"
      Foreground="White"
    />
    <Button
      x:Name="twoButton"
      Grid.Row="4"
      Grid.Column="1"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="2"
      Foreground="White"
    />
    <Button
      x:Name="threeButton"
      Grid.Row="4"
      Grid.Column="2"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="3"
      Foreground="White"
    />
    <Button
      x:Name="plusButton"
      Grid.Row="4"
      Grid.Column="3"
      Margin="5"
      Background="Orange"
      Click="OperationButton_Click"
      Content="+"
      Foreground="White"
    />
    <Button
      x:Name="zeroButton"
      Grid.Row="5"
      Grid.ColumnSpan="2"
      Margin="5"
      Background="#444444"
      Click="NumberButton_Click"
      Content="0"
      Foreground="White"
    />
    <Button
      x:Name="dotButton"
      Grid.Row="5"
      Grid.Column="2"
      Margin="5"
      Background="#444444"
      Content="."
      Foreground="White"
    />
    <Button
      x:Name="equalButton"
      Grid.Row="5"
      Grid.Column="3"
      Margin="5"
      Background="Orange"
      Content="="
      Foreground="White"
    />
  </Grid>
</Window>

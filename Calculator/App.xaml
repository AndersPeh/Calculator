<Application
  x:Class="Calculator.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:Calculator"
  StartupUri="MainWindow.xaml"
>
  <Application.Resources>
    <SolidColorBrush x:Key="numbersColor" Color="Black" />
    <SolidColorBrush x:Key="operatorsColor" Color="Maroon" />
    <SolidColorBrush x:Key="foregroundColor" Color="White" />
    <Style TargetType="Button">
      <Setter Property="Foreground" Value="White" />
      <Setter Property="FontSize" Value="25" />
      <Setter Property="Margin" Value="5" />
    </Style>
    <Style x:Key="numberButtonsStyle" TargetType="Button">
      <Setter Property="Foreground" Value="{StaticResource foregroundColor}" />
      <Setter Property="FontSize" Value="25" />
      <Setter Property="Margin" Value="5" />
      <Setter Property="Background" Value="{StaticResource numbersColor}" />
    </Style>
    <Style
      x:Key="operatorButtonsStyle"
      BasedOn="{StaticResource numberButtonsStyle}"
      TargetType="Button"
    >
      <Setter Property="Background" Value="{StaticResource operatorsColor}" />
    </Style>
    <Style
      x:Key="additionalButtonsStyle"
      BasedOn="{StaticResource numberButtonsStyle}"
      TargetType="Button"
    >
      <Setter Property="Background" Value="LightGray" />
      <Setter Property="Foreground" Value="Black" />
    </Style>
    <Style TargetType="Label">
      <Setter Property="FontSize" Value="70" />
    </Style>
  </Application.Resources>
</Application>
